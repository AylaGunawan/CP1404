BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_m
            text: "34"
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: "vertical"
            Button:
                id: button_up
                text: "Up"
                font_size: 30
                on_press: app.handle_up()
            Button:
                id: button_down
                text: "Down"
                font_size: 30
                on_press: app.handle_down()
    Button:
        id: button_convert_m_to_km
        text: "Convert m to km"
        font_size: 30
        on_press: app.handle_convert()
    Label:
        id: output_km
        text: "54.717" # change
        font_size: 48
        color: (1, 1, 0, 1)